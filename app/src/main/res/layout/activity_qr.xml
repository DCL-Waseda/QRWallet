<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gushimakota.qrwallet.QRActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_money"
        android:visibility="visible">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_qr">

            <com.example.gushimakota.qrwallet.SquareQR
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/barcode_scanner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qr_text"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="32dp" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="デバッグボタン"
                android:id="@+id/button"
                android:layout_gravity="center_horizontal"
                android:onClick="debugBtn" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="デバッグボタン2"
                android:id="@+id/button2"
                android:layout_gravity="center_horizontal"
                android:onClick="debug2" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
